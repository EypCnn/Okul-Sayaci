        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="30dp"
        android:text="Okullar Ne Zaman Kapanacak ? "
        android:textColor="@color/beyaz"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/gunuzunygs"
        android:text="11 Mart 2018"
        android:textColor="@color/beyaz"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/koyumavi"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="30dp"
            android:text="15 Tatil Ne Zaman ?"
            android:textColor="@color/beyaz"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gunuzunlys1"
            android:text="10 Haziran 2018"
            android:textColor="@color/beyaz"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/koyumavi"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_gravity="right"
            android:id="@+id/bilgi"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/phen"
            android:onClick="buttonEyp"
            android:textColor="@color/beyaz" />
    </LinearLayout>
</RelativeLayout>
